<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="488dp"

            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:padding="10dp">

            <TextView
                android:id="@+id/add_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="ADD YOUR OWN PRODUCTS"
                android:textColor="@color/color_1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/add_products"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/products_name"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/add_products"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="#FF8A80"
                    android:gravity="center|center_horizontal"
                    android:text="Products Name"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/add_products"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@id/products_name"
                    android:background="#FF8A80"
                    android:gravity="center|center_horizontal"
                    android:text="Price" />
            </LinearLayout>

            <Button
                android:id="@+id/save_product"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:background="#13b586"
                android:text="Add To List" />

            <ListView
                android:id="@+id/listView_Products"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/save_product"
                android:layout_marginTop="15dp"></ListView>

            <Button
                android:id="@+id/save_products"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/listView_Products"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:background="#13b586"
                android:text="Submit"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF8A80"
    tools:context="com.nerdspoint.android.chandigarh.fragments.shopRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <RelativeLayout
            android:layout_height="120dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="#424242"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/ShopAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/Shopname"
                android:layout_below="@+id/Shopname"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/shopaddress"
                android:background="@drawable/roundedborder"
                android:hint="Shop Address" />

            <EditText
                android:id="@+id/Shopname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="160dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/shopname"
                android:background="@drawable/roundedborder"
                android:hint="Shop Name"
                android:padding="10dp" />


            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/roundedborder"
                 />
            <Button
                android:text="CLICK HERE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:id="@+id/productsave"
                android:background="#FF8A80"
                android:layout_below="@+id/SCO"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Submit"
                android:layout_below="@id/productsave"
                android:background="#13b586"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:id="@+id/submit"
                android:text="Submit" />

            <EditText
                android:id="@+id/SCO"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/roundedborder"
                android:hint="SCO"
                android:layout_below="@+id/ShopAddress"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp" />

            <EditText
                android:id="@+id/pincode"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:background="@drawable/roundedborder"
                android:hint="Pincode"
                android:layout_below="@+id/ShopAddress"
                android:layout_marginBottom="45dp" />

            <TextView
                android:text="Register Your Shop"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/color_1"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:id="@+id/textView8" />

            <TextView
                android:text="If you want to add products"
                android:textStyle="bold"
                android:textColor="@color/color_1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/producttext"
                android:layout_alignBaseline="@+id/productsave"
                android:layout_alignBottom="@+id/productsave" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/category"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/shopcategory"
                android:background="@drawable/roundedborder"
                />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF8A80"
    tools:context="com.nerdspoint.android.chandigarh.fragments.shopRegistration">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#424242"
        android:orientation="vertical"
        android:padding="10dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/ShopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Shopname"
            android:layout_below="@+id/Shopname"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedborder"
            android:drawableLeft="@drawable/shopaddress"
            android:drawablePadding="10dp"
            android:hint="Shop Address" />

        <EditText
            android:id="@+id/Shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundedborder"
            android:drawableLeft="@drawable/shopname"
            android:drawablePadding="10dp"
            android:hint="Shop Name"
            android:padding="10dp"
            android:layout_below="@+id/category"
            android:layout_alignParentStart="true" />


        <Spinner
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView8"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundedborder"
            />


        <Button
            android:id="@+id/submit"
            android:onClick="ShopRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#13b586"
            android:hint="Submit"
            android:text="Submit"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/SCO" />

        <EditText
            android:id="@+id/SCO"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ShopAddress"
            android:layout_marginEnd="1dp"
            android:inputType="number"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/roundedborder"
            android:hint="SCO" />

        <EditText
            android:id="@+id/pincode"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ShopAddress"

            android:background="@drawable/roundedborder"
            android:hint="Pincode"
            android:inputType="number"/>
        <EditText
            android:id="@+id/Sector"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedborder"
            android:hint="Sector"
            android:inputType="number"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/SCO"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="latitude"
            android:background="@drawable/roundedborder"
            android:id="@+id/latitude"
            android:layout_below="@+id/mapPin"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="longitude"
            android:background="@drawable/roundedborder"
            android:id="@+id/longitude"
            android:layout_below="@+id/mapPin"
            android:layout_alignEnd="@+id/mapPin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="shop Phone number"
            android:inputType="number"
            android:background="@drawable/roundedborder"
            android:id="@+id/ShopNumber"
            android:layout_below="@+id/latitude"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Register Your Shop"
            android:textAlignment="center"
            android:textColor="@color/color_1"
            android:textSize="30dp"
            android:textStyle="bold" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pin your shop at map"
            android:id="@+id/mapPin"
            android:layout_alignBaseline="@+id/Sector"
            android:layout_alignBottom="@+id/Sector"
            android:layout_alignEnd="@+id/SCO" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundedborder"
            app:srcCompat="@drawable/shopcategory"
            android:layout_alignTop="@+id/category"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="cancel"
            android:id="@+id/cancel"
            android:layout_alignParentBottom="true"
            />



    </RelativeLayout>


</RelativeLayout>

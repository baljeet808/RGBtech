<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="0.5dp"
        android:layout_margin="2dp"
        cardView:cardCornerRadius="10pt"
        >
        <ImageView
            android:layout_width="164dp"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:id="@+id/shopImageHolder"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/topdownborderbackground"
            android:layout_margin="5dp">


            <TextView
                android:id="@+id/shopNameHolder"
                android:text="shopname"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:drawableLeft="@drawable/quantum_ic_closed_caption_grey600_36"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_toRightOf="@id/shopImageHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/ContactNumberHolder"
                android:text="9779297688"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_toRightOf="@id/shopImageHolder"
                android:layout_below="@id/shopNameHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/contactno"
                />

            <TextView
                android:id="@+id/AddressHolder"
                android:text="Address"
                android:textStyle="normal"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_toRightOf="@id/shopImageHolder"
                android:drawableLeft="@drawable/ic_menu_share"
                android:layout_width="match_parent"
                android:layout_below="@id/ContactNumberHolder"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"/>


            <TextView
                android:id="@+id/productHolder"
                android:text="Product "
                android:textStyle="normal"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_toRightOf="@id/shopImageHolder"
                android:drawableLeft="@drawable/shopcategory"
                android:layout_width="match_parent"
                android:layout_below="@id/AddressHolder"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/priceHolder"
                android:text="Price"
                android:textStyle="normal"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_toRightOf="@id/shopImageHolder"
                android:drawableLeft="@drawable/shopcategory"
                android:layout_width="match_parent"
                android:layout_below="@id/productHolder"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
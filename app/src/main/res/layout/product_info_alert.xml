<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="480dp"
    android:layout_gravity="center"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/product_photo"
        android:src="@drawable/not_available"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/Product_name_alert"
        android:text="Product Name"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:background="#E0E0E0"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="INR 0.00"
            android:gravity="center"
            android:textColor="#0c0"
            android:background="#E8F5E9"
            android:textSize="24dp"
            android:textStyle="bold"
            android:id="@+id/product_price_alert"
            />
    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/address_for_alert"
            android:text="SCO 88, sector 8, Chandigarh"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:background="#EEEEEE"
            android:textSize="18dp"
            android:padding="10dp"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/description"
            android:text="Description : "
            android:background="#F5F5F5"
            android:textColor="#607D8B"
            android:textSize="16dp"
            android:padding="10dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:elevation="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Contact_alert"
            android:text="Call Now   +91-7015970488"
            android:textColor="#E53935"
            android:background="#FFE0b2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            />
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/Map_from_alert"
            android:layout_weight="1"
            android:background="#449944"
            android:text="On Map"
            android:textSize="22dp"
            android:textColor="#ccc"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/notify_from_alert"
            android:background="#E53935"
            android:text="Notify Seller"
            android:textSize="22dp"
            android:textColor="#ccc"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>
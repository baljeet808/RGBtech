<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF8A80"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nerdspoint.android.chandigarh.activities.SignupForm">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#424242"
            android:id="@+id/holder"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/signupicon"
                android:id="@+id/imageView4" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:text="SIGN UP" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="104dp"
                android:background="@drawable/roundedborder"
                android:hint="E-Mail Address"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/e_mail"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/email"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundedborder"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="20dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/email"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundedborder"
                android:drawableLeft="@drawable/confpass"
                android:drawablePadding="20dp"
                android:hint="Retype "
                android:inputType="textPassword"

                />

            <com.digits.sdk.android.DigitsAuthButton
                android:id="@+id/auth_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileNo"
                android:layout_alignStart="@+id/mobileNo" />


            <EditText
                android:id="@+id/mobileNo"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundedborder"
                android:drawableLeft="@drawable/contactno"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Contact Number"
                android:layout_marginBottom="15dp"
                android:inputType="number" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnBack"
                android:background="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/mobileNo"
                android:layout_marginStart="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="7dp"
                android:text="Continue"
                android:background="#13b586"
                android:id="@+id/button4"
                android:onClick="signup"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/imageView4" />


        </RelativeLayout>
</RelativeLayout>
</RelativeLayout>

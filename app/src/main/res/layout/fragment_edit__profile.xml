<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    

    tools:context="com.nerdspoint.android.chandigarh.fragments.Edit_Profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/Phone"
            android:hint="Phone"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="26dp"
            android:id="@+id/email"
            android:hint="EMAIL"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/FirstName" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="27dp"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/done"
            android:text="Done"
            android:layout_below="@+id/username"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/username"
            android:hint="Username"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/password"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/password"
            android:hint="Password"
            android:layout_marginTop        ="12dp"
            android:layout_below="@+id/Phone"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/Phone" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/FirstName"
            android:hint="First Name"

            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginStart="56dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/LastName"
            android:hint="last Name"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/FirstName"
            android:layout_alignEnd="@+id/email" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/Edit_FirstName"
            android:background="@drawable/pass"
            android:layout_marginStart="11dp"
            android:layout_alignTop="@+id/FirstName"
            android:layout_toEndOf="@+id/LastName"
            android:layout_marginTop="14dp" />


        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/Edit_LastName"
            android:background="@drawable/pass"
            android:layout_above="@+id/email"
            android:layout_alignStart="@+id/Edit_FirstName" />


        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/Edit_Password"
            android:background="@drawable/pass"
            android:layout_alignTop="@+id/password"
            android:layout_marginTop="14dp"
            android:layout_alignStart="@+id/Edit_Phone"
            />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/Edit_Email"
            android:background="@drawable/pass"


            android:layout_marginBottom="14dp"
            android:layout_above="@+id/Phone"
            android:layout_alignStart="@+id/Edit_LastName" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/Edit_Phone"
            android:background="@drawable/pass"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/Edit_Email" />


    </RelativeLayout>


</RelativeLayout>
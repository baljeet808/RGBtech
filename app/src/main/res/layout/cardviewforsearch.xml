<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="0.5dp"
        android:layout_margin="2dp"
        cardView:cardCornerRadius="10pt"
        android:layout_weight="0.95">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/topdownborderbackground">


            <TextView
                android:id="@+id/shopNameHolder"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/quantum_ic_closed_caption_grey600_36"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="shopname"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ContactNumberHolder"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopNameHolder"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/contactno"
                android:gravity="center"
                android:text="9779297688"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/productHolder"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ContactNumberHolder"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/shopcategory"
                android:gravity="center"
                android:text="Product "
                android:textColor="#000"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/priceHolder"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/productHolder"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/cast_abc_scrubber_control_to_pressed_mtrl_000"
                android:gravity="center"
                android:text="Price"
                android:textColor="#000"
                android:textSize="14dp"
                android:textStyle="normal" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scrollbars="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/scrollForAddress"
                android:layout_alignParentRight="true"
                android:layout_below="@id/priceHolder"
                >
                <TextView
                    android:id="@+id/AddressHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_menu_share"
                    android:text="Address"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
            </ScrollView>




        </RelativeLayout>


        <ImageView
            android:id="@+id/shopImageHolder"
            android:layout_width="150dp"
            android:layout_height="150dp"


            android:layout_marginLeft="10dp"
            android:layout_marginStart="21dp"
            android:background="@drawable/background"
            android:layout_above="@+id/priceHolder"
            android:layout_alignParentStart="true" />

    </android.support.v7.widget.CardView>


</LinearLayout>
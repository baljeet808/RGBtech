<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item >
        <shape>

            <gradient
                android:startColor="#fff"
                android:centerColor="#ccffcc"
                android:endColor="#ccffcc"
                android:angle="270"
                />
            <stroke
                android:width="1dp"
                android:color="#ccffcc"    />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>


</selector>